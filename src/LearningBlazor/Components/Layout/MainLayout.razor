@using Humanizer
@inherits LayoutComponentBase

<RadzenLayout>
    <RadzenHeader>
        <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" Gap="0">
            <RadzenSidebarToggle Click="@(() => sidebarExpanded = true)" />
            <RadzenLabel Text="脊髓刺激程控软件" />
        </RadzenStack>
    </RadzenHeader>
    <RadzenSidebar Responsive="false" Style="width: 200px">
        <RadzenPanelMenu DisplayStyle="@(sidebarExpanded ? MenuItemDisplayStyle.IconAndText : MenuItemDisplayStyle.Icon)" ShowArrow="false">
            <RadzenPanelMenuItem Text="患者管理" Icon="home" Path="/patients"/>
            <RadzenPanelMenuItem Text="设备管理" Icon="dashboard" Path="/devices" />
            <RadzenPanelMenuItem Text="程序管理" Icon="groups" Path="/groups" />
            <RadzenPanelMenuItem Text="阻抗测量" Icon="color_lens" Path="/impedance" />
            <RadzenPanelMenuItem Text="报告管理" Icon="color_lens" Path="/reports"/>
        </RadzenPanelMenu>
    </RadzenSidebar>
    <RadzenBody>
            @Body
    </RadzenBody>
</RadzenLayout>

@code 
{
    bool sidebarExpanded =true;
}